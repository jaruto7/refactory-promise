{
  "name": "Text-Song",
  "version": "1.0.0",
  "description": "https://lukasz-github.github.io/Text-Song/",
  "main": "index.js",
  "scripts": {
    "start-htto": "http-server",
    "start-babel": "babel script.js --presets latest --watch --out-file script-compiled.js",
    "test": "npm-run-all test:*",
    "test:html": "globstar nu-html-checker *.html",
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdirp sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss css/style.css js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "build": "npm-run-all build:* test",
    "build:clean": "rimraf css/*.css",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "watch": "npm-run-all build -p watch:*",
    "watch:browsersync": "browser-sync start --server --files css/*.css *.html",
    "watch:sassprefixer": "onchange -d 100 sass/style.scss -- npm-run-all sassprefixer:*",
    "sassprefixer:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "sassprefixer:autoprefixer": "autoprefixer-cli css/style.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lukasz-GitHub/Text-Song.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Lukasz-GitHub/Text-Song/issues"
  },
  "homepage": "https://github.com/Lukasz-GitHub/Text-Song#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-latest": "^6.24.1",
    "browser-sync": "^2.24.4",
    "globstar": "^1.0.0",
    "http-server": "^0.11.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "onchange": "^4.0.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "babel-standalone": "^6.26.0"
  }
}
